<script>
    // Theme Logic
    function setTheme(t) { document.documentElement.setAttribute('data-theme', t); }

    // Search and Category Logic Combined
    function filterAll() {
        const query = document.getElementById('searchBar').value.toLowerCase();
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
            const name = card.querySelector('h3').innerText.toLowerCase();
            card.classList.toggle('hidden', !name.includes(query));
        });
    }

    function setCategory(cat) {
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
            if (cat === 'all') card.classList.remove('hidden');
            else card.classList.toggle('hidden', card.getAttribute('data-cat') !== cat);
        });
    }

    // Auto-generate the remaining computer items to hit 127 total
    const grid = document.getElementById('repairGrid');
    const startCount = document.querySelectorAll('.card').length;
    for(let i = startCount + 1; i <= 127; i++) {
        let card = document.createElement('div');
        card.className = 'card';
        card.setAttribute('data-cat', 'computer');
        card.innerHTML = `
            <img src="picsum.photos{i+100}/300/200">
            <h3>Computer Fix #${i}</h3>
            <p>Fix: Check hardware compatibility, clean the motherboard, and reset BIOS settings to default.</p>
        `;
        grid.appendChild(card);
    }
</script>

